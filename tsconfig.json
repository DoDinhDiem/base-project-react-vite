{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"], // Thêm dòng này
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
